@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer; 

@model TeacherHelper.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "RedactProfile";
}

<h1>@localizer["Redact"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RedactProfile">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>*@
                <label asp-for="User.UserName" class="control-label">@localizer["Name"]</label>
                <input asp-for="User.UserName" class="form-control" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
                <label asp-for="User.UserLastname" class="control-label">@localizer["Lastname"]</label>
                <input asp-for="User.UserLastname" class="form-control" />
                <span asp-validation-for="User.UserLastname" class="text-danger"></span>
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer["Edit"]" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-controller="Account" asp-action="Profile">@localizer["Back"]</a>
</div>

