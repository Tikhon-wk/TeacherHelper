@using Microsoft.AspNetCore.Mvc.Localization; 
@model TeacherHelper.ViewModels.AddRoleToOther
@inject IViewLocalizer localizer;

<form method="post" asp-action="AddRoleToOther" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label asp-for="UserName" class="control-label">@localizer["Name"]</label>
    <input asp-for="UserName" class="form-control" />
    <span asp-validation-for="UserName" class="text-danger"></span>
    <label asp-for="Role" class="control-label">@localizer["Roles"]</label>
    <select asp-for="Role">
        @if (!User.IsInRole("Teacher"))
        {
            <option value="Teacher">@localizer["Teacher"]</option>
        }
        @if (!User.IsInRole("Student"))
        {
            <option value="Student">@localizer["Student"]</option>
        }
    </select>
    <span asp-validation-for="Role" class="text-danger"></span>
    <input type="submit" class="btn btn-dark" value="@localizer["Add"]" />
</form>
